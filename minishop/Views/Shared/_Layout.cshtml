<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewData["Title"] - minishop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/indexLayout.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Cart.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/minishop.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light navbar-st">
            <div class="container ">
                <a class="navbar-brand" href="/">
                    <img src="~/imgs/layout/logo.png" alt="minishop" width="55">
                </a>
               
                <div class="justify-content-start d-flex" id="navbarNav" >
                    <a href="/Cart" class="d-inline btn cart-button p-2 d-flex align-items-center justify-content-center">
                        <img src="~/imgs/layout/cart.png" alt="minishop" width="33" class="me-1">
                        <span class=" badge count-cart-layout rounded-pill bg-black ms-0">
                            0
                        </span>
                    </a>
                    <div class="nav-item dropstart">
                        <a class=" mx-2 p-0 nav-link " href="#" id="user-info" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <img src="~/imgs/layout/user.png" alt="user" width="50" class="me-1 user-button p-1">
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="user-info" style="border-radius: 18px;">
                            <li>
                                <label class="dropdown-item user-info mt-2">Василий Петрович</label>
                            </li>
                            <li>
                                <div class="px-3 pt-2">
                                    <a href="/Logout" class="dropdown-item py-2 cart-button button-login text-center ">
                                        Выйти
                                    </a>
                                </div>

                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
   
    @await RenderSectionAsync("Scripts", required: false)
    <script src="/js/cart.js"></script>
    <script src="/js/identity.js"></script>
</body>
</html>
